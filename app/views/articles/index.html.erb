
<% @articles.each do |article| %>

	<headline class = "main"><%= link_to article.title.titleize, article %></headline>
	<hr>
	<% author = User.find(article.user_id) %>
	<gray class = "left">by <%= link_to author.name.titleize, author %></gray> <gray class = "right">posted <%= time_ago_in_words(article.created_at) %> ago</gray>
	<div class = "clear"></div>
</br>
	<div class = "article-text">
		<% if article.mainImage.present? %>
			<div class = "left" style = "width:185px;padding-top:10px">
				<%= link_to image_tag(article.mainImage(:thumb)), article %>
			</div>
			<div class = "right" style = "width:500px;position:relative;top:-20px">
		<% end %>
			<%= raw article.body.at(0...article.excerpt_length )  %> &#62;&#62; <%= link_to 'read more', article %> 
			<%= raw "</div>" if article.mainImage.present? %>
			<div class = "clear"></div>
		</p>
	</div>
<% end %>
